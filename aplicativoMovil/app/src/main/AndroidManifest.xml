<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- se solicita permiso para acceder a internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BiblioMayaya"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".prestamos"
            android:exported="false" />
        <activity
            android:name=".usuarios"
            android:exported="false" />
        <activity
            android:name=".multas"
            android:exported="false" />
        <activity
            android:name=".contenedorListaLibro"
            android:exported="false" />
        <activity
            android:name=".ayudaLibros"
            android:exported="false" />
        <activity
            android:name=".contenedorDetalleLibro"
            android:exported="false" />
        <activity
            android:name=".agregarLibro"
            android:exported="false" />
        <activity
            android:name=".menuOpcionesLibro"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>